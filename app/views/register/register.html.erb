
<div class="form_container">
  <%= form_for(:reg) do |f|  %>
              
      <label class="label_input">
        <span class="span_input">Your First Name</span>
        <%= f.text_field :first_name, :class => 'input_field', placeholder: 'Nick'%>
      </label>
      <label class="label_input">
        <span class="span_input">Your Last Name</span>
        <%= f.text_field :last_name, :class => 'input_field', placeholder: 'River'%>
      </label>
      <label class="label_input">
        <span class="span_input">Your Email</span>
        <%= f.email_field :email, :class => 'input_field', placeholder: 'example@example.com'%>
      </label>
      <label class="label_input">
        <span class="span_input">Your Username</span>
        <%= f.text_field :username, :class => 'input_field', placeholder: 'Username'%>
      </label>
      <label class="label_input">
        <span class="span_input">Your Password</span>
        <%= f.password_field :password, :class => 'input_field', placeholder: 'Password'%>
      </label>
    <%= f.submit 'Register', :class => 'input_button'%>
  <% end %>
<div>